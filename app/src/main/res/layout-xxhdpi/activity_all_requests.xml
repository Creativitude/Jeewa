<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.creativitude.jeewa.activity.AllRequests"
    android:paddingTop="60dp"
    android:id="@+id/allRequestsParent"
    >


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAllRequests"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clipToPadding="false"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addNewPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="75dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/add_back_transparent"
        style="@style/FloatingActionButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/allRequestsEmptyView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/empty_view"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="gone"/>

</RelativeLayout>
